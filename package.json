{
  "name": "praman-supply-chain",
  "version": "1.0.0",
  "description": "PRAMAN Supply Chain Blockchain Implementation",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "node": "hardhat node",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:hardhat": "hardhat run scripts/deploy.js --network hardhat",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "start:local": "npm run node & npm run deploy:local & npm run frontend:dev",
    "build": "cd frontend && npm install && npm run build",
    "install": "cd frontend && npm install"
  },
  "keywords": [
    "blockchain",
    "supply-chain",
    "ethereum",
    "hardhat"
  ],
  "author": "PRAMAN Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "hardhat": "^2.26.3",
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "vite": "^7.1.2"
  },
  "dependencies": {
    "solc": "^0.8.30",
    "web3": "^4.16.0",
    "@metamask/detect-provider": "^2.0.0",
    "@tailwindcss/vite": "^4.1.13",
    "crypto-js": "^4.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.2",
    "tailwindcss": "^4.1.13"
  }
}
